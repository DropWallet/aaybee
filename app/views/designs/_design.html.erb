<div class="card">
  <div class="grid grid-50 grid-gap-16">
    <div>
      <img class="placeholder" src="http://via.placeholder.com/<%= width %>x<%= height %>" width="<%= width %>" height="<%= height %>" />
    </div>
    <div>
      <img class="placeholder" src="http://via.placeholder.com/<%= width %>x<%= height %>" width="<%= width %>" height="<%= height %>" />
    </div>
  </div>
</div>
<div class="result">
  <div class="result-header flex">
    <img class="result-header-avatar avatar avatar-small" src="https://1.gravatar.com/avatar/4ebbd083830d32e580e0e16893acf85a?s=96&d=mm" />
    <span class="result-header-name">Stevie</span>
    <div class="flex-1"></div>
    <small class="votes">45 votes</small>
  </div>
  <div class="result-bars">
    <div class="flex">
      <span class="bar-label color-red">A</span>
      <span class="bar">
        <div class="bar-inner bg-red" style="width: 80%"></div>
      </span>
    </div>
    <div class="flex">
      <span class="bar-label color-blue">B</span>
      <span class="bar">
        <div class="bar-inner bg-blue" style="width: 20%"></div>
      </span>
    </div>
  </div>
</div>
